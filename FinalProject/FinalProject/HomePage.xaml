<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImage="foodbg.png"
             x:Class="FinalProject.HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout"
                     Clicked="Logout_Clicked"/>
    </ContentPage.ToolbarItems>
    
    
    <ContentPage.Content>
        <StackLayout
            Padding="0">
            <Label Text="Welcome"
                   FontSize="40"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0, 60, 0, 0"/>
            <Label 
                x:Name="Username"
                FontSize="30"
                TextColor="Black"
                HorizontalOptions="Center"/>
            <Button
                Text="Enter App"
                HeightRequest="40"
                FontSize="15"
                Margin="25, 100, 25, 0"
                TextColor="White"
                BackgroundColor="Orange"
                Clicked="Enter_App"/>
        </StackLayout>

       
    </ContentPage.Content>
</ContentPage>